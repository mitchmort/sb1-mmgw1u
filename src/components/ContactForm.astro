---
import Button from './Button.astro';
---

<section id="contact" class="py-20 bg-white">
  <div class="max-w-3xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-slate-800 mb-8">Get Started Today</h2>
    <p class="text-center text-slate-600 mb-8">Schedule your $99 roof inspection and start saving.</p>
    
    <div class="bg-white rounded-lg shadow-lg p-8" x-data="contactForm">
      <!-- Progress Bar -->
      <div class="mb-8">
        <div class="h-2 bg-gray-200 rounded-full">
          <div class="h-2 bg-primary-600 rounded-full transition-all duration-300"
               :style="`width: ${(currentStep / totalSteps) * 100}%`"></div>
        </div>
        <div class="mt-2 text-sm text-gray-600 text-center">
          Step <span x-text="currentStep"></span> of <span x-text="totalSteps"></span>
        </div>
      </div>

      <!-- Step 1: Contact Information -->
      <div x-show="currentStep === 1">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Full Name</label>
            <input type="text" 
                   x-model="formData.name"
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary-500 outline-none">
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Email</label>
            <input type="email" 
                   x-model="formData.email"
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary-500 outline-none">
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Address</label>
            <input type="text" 
                   x-model="formData.address"
                   data-address-autocomplete
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary-500 outline-none">
          </div>
        </div>
      </div>

      <!-- Step 2: Property Type -->
      <div x-show="currentStep === 2">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <button 
            @click="selectPropertyType('residential')"
            class="p-6 border rounded-lg text-center hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.propertyType === 'residential'}">
            <h3 class="text-lg font-semibold mb-2">Residential</h3>
            <p class="text-gray-600">Single-family homes, townhouses, etc.</p>
          </button>
          <button 
            @click="selectPropertyType('commercial')"
            class="p-6 border rounded-lg text-center hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.propertyType === 'commercial'}">
            <h3 class="text-lg font-semibold mb-2">Commercial</h3>
            <p class="text-gray-600">Office buildings, retail spaces, etc.</p>
          </button>
        </div>
      </div>

      <!-- Step 3: Damage Type -->
      <div x-show="currentStep === 3">
        <div class="space-y-3">
          <button 
            @click="selectDamageType('leaking')"
            class="w-full p-4 border rounded-lg text-left hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.damageType === 'leaking'}">
            Leaking Roof
          </button>
          <button 
            @click="selectDamageType('old')"
            class="w-full p-4 border rounded-lg text-left hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.damageType === 'old'}">
            Old/Aging Roof
          </button>
          <button 
            @click="selectDamageType('storm')"
            class="w-full p-4 border rounded-lg text-left hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.damageType === 'storm'}">
            Storm Damage
          </button>
          <button 
            @click="selectDamageType('other')"
            class="w-full p-4 border rounded-lg text-left hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.damageType === 'other'}">
            Other Issues
          </button>
        </div>
      </div>

      <!-- Step 4: Timeline -->
      <div x-show="currentStep === 4">
        <div class="space-y-3">
          <button 
            @click="selectTimeline('now')"
            class="w-full p-4 border rounded-lg text-left hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.timeline === 'now'}">
            Need Service Now
          </button>
          <button 
            @click="selectTimeline('1-3months')"
            class="w-full p-4 border rounded-lg text-left hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.timeline === '1-3months'}">
            Within 1-3 Months
          </button>
          <button 
            @click="selectTimeline('future')"
            class="w-full p-4 border rounded-lg text-left hover:border-primary-500 transition-colors"
            :class="{'border-primary-500 bg-primary-50': formData.timeline === 'future'}">
            Future Planning
          </button>
        </div>
      </div>

      <!-- Step 5: Phone -->
      <div x-show="currentStep === 5">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Phone Number</label>
          <input type="tel" 
                 x-model="formData.phone"
                 class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary-500 outline-none"
                 placeholder="(555) 555-5555">
        </div>
      </div>

      <!-- Navigation Buttons -->
      <div class="mt-6 flex justify-between">
        <button 
          x-show="currentStep > 1"
          @click="previousStep"
          class="px-6 py-2 text-primary-600 hover:text-primary-700">
          Back
        </button>
        <button 
          x-show="currentStep < totalSteps"
          @click="nextStep"
          :disabled="!isCurrentStepValid()"
          class="ml-auto px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 disabled:opacity-50 disabled:cursor-not-allowed">
          Next
        </button>
        <button 
          x-show="currentStep === totalSteps"
          @click="submitForm"
          :disabled="!isCurrentStepValid()"
          class="ml-auto px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 disabled:opacity-50 disabled:cursor-not-allowed">
          Submit
        </button>
      </div>
    </div>
  </div>
</section>