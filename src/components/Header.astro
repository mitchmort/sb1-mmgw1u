---
import Button from './Button.astro';
---

<header class="fixed w-full bg-white/95 backdrop-blur-sm shadow-sm z-50">
  <nav 
    class="max-w-7xl mx-auto px-4 py-4"
    x-data="{ isOpen: false }"
  >
    <div class="flex justify-between items-center">
      <a href="/" class="flex items-center space-x-2">
        <img src="/logo.svg" alt="Roof Scout Logo" class="h-10 w-10">
        <span class="text-2xl font-bold text-slate-800">Roof Scout</span>
      </a>

      <!-- Mobile menu button -->
      <button 
        class="md:hidden p-2 rounded-lg hover:bg-slate-100 transition-colors"
        @click="isOpen = !isOpen"
        aria-label="Toggle menu"
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-6 w-6" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
          x-show="!isOpen"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-6 w-6" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
          x-show="isOpen"
          style="display: none;"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <!-- Desktop navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#how-it-works" class="text-slate-600 hover:text-slate-800 transition-colors">How It Works</a>
        <a href="#benefits" class="text-slate-600 hover:text-slate-800 transition-colors">Benefits</a>
        <Button href="#contact" variant="primary">Schedule Inspection</Button>
      </div>
    </div>

    <!-- Mobile navigation -->
    <div 
      class="md:hidden"
      x-show="isOpen"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-4"
      style="display: none;"
    >
      <div class="px-2 pt-4 pb-3 space-y-3">
        <a 
          href="#how-it-works" 
          class="block px-3 py-2 rounded-lg text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50 transition-colors"
          @click="isOpen = false"
        >
          How It Works
        </a>
        <a 
          href="#benefits" 
          class="block px-3 py-2 rounded-lg text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50 transition-colors"
          @click="isOpen = false"
        >
          Benefits
        </a>
        <div class="px-3 pt-2">
          <Button 
            href="#contact" 
            variant="primary" 
            class="w-full justify-center"
            @click="isOpen = false"
          >
            Schedule Inspection
          </Button>
        </div>
      </div>
    </div>
  </nav>
</header>