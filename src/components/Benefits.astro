---
interface Benefit {
  title: string;
  description: string;
  icon: string;
}

const benefits: Benefit[] = [
  {
    title: "Save Money",
    description: "We go direct to the workers installing the roof. This process cut's out the middleman and typically saves homeowners 30-50%",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  },
  {
    title: "Unbiased Inspections",
    description: "Get honest assessments from inspectors who don't profit from unnecessary work.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  },
  {
    title: "Quality Assured",
    description: "We only work with vetted, licensed, and insured roofing contractors.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
    </svg>`
  },
  {
    title: "Stress-Free Process",
    description: "We manage everything from inspection to final installation oversight.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>`
  }
];
---

<section id="benefits" class="py-20 bg-slate-900 relative">
  <!-- Decorative elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 left-1/4 w-1/2 h-1/2 bg-primary-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-1/2 h-1/2 bg-primary-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 rounded-full bg-primary-500/10 text-primary-300 text-sm font-medium mb-4" data-aos="fade-up">
        Why Choose Us
      </span>
      <h2 class="text-4xl font-bold text-white mb-6" data-aos="fade-up">Why Choose Roof Scout</h2>
      <p class="text-lg text-slate-300 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        We're revolutionizing the roofing industry with transparency, technology, and trust.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {benefits.map((benefit, index) => (
        <div 
          class="bg-slate-800/50 backdrop-blur-sm p-8 rounded-2xl border border-slate-700/50 hover:border-primary-500/50 shadow-xl hover:shadow-2xl hover:shadow-primary-500/10 transition-all duration-300 group"
          data-aos="fade-up" 
          data-aos-delay={index * 100}
        >
          <div class="flex items-start space-x-6">
            <div class="flex-shrink-0">
              <div class="w-14 h-14 bg-primary-500/10 rounded-xl flex items-center justify-center text-primary-400 group-hover:scale-110 transition-transform duration-300">
                <Fragment set:html={benefit.icon} />
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary-400 transition-colors">
                {benefit.title}
              </h3>
              <p class="text-slate-300">{benefit.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>