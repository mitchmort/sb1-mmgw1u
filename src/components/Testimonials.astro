---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
  image: string;
  savings?: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "Roof Scout's independent inspection gave us peace of mind that we were only paying for what we needed.",
    savings: "Saved $8,400",
    author: "Sarah Johnson",
    role: "Homeowner in Austin, TX",
    image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&h=400&auto=format&fit=crop&crop=face"
  },
  {
    quote: "The competitive bidding process was transparent and efficient. We got a quality roof at a fraction of the initial quotes we received.",
    savings: "Saved $6,200",
    author: "Michael Chen",
    role: "Property Manager",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&h=400&auto=format&fit=crop&crop=face"
  },
  {
    quote: "Their team handled everything from inspection to installation oversight. It was the most stress-free home improvement project we've ever done.",
    savings: "Saved $5,800",
    author: "Emily Rodriguez",
    role: "First-time Homeowner",
    image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=400&h=400&auto=format&fit=crop&crop=face"
  }
];
---

<section class="py-16 md:py-20 bg-slate-50 relative">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 left-1/4 w-1/2 h-1/2 bg-primary-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-1/2 h-1/2 bg-primary-500/5 rounded-full blur-3xl"></div>
    <div class="absolute top-1/4 right-1/4 w-24 h-24 bg-primary-200/20 rounded-full blur-xl"></div>
    <div class="absolute bottom-1/4 left-1/4 w-32 h-32 bg-primary-200/20 rounded-full blur-xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4">
    <div class="text-center mb-12 md:mb-16" data-aos="fade-up">
      <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 text-sm font-medium mb-4 shadow-sm">
        Testimonials
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-4">What Our Customers Say</h2>
      <p class="text-lg md:text-xl text-slate-600 max-w-2xl mx-auto">
        Don't just take our word for it. Here's what homeowners across the country have to say about their Roof Scout experience.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div 
          class="bg-white rounded-2xl shadow-xl p-6 md:p-8 border border-slate-100 hover:border-primary-200 transition-all duration-300 group relative overflow-hidden"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <!-- Quote icon -->
          <div class="absolute -top-2 -right-2 text-primary-100/20 pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>

          <div class="relative mb-6">
            <p class="text-slate-600 mb-4">{testimonial.quote}</p>
            {testimonial.savings && (
              <div class="text-lg font-bold text-primary-600 mb-4">
                {testimonial.savings}
              </div>
            )}
          </div>

          <div class="relative flex items-center">
            <img 
              src={testimonial.image} 
              alt={testimonial.author}
              class="w-12 h-12 rounded-full object-cover mr-4 border-2 border-primary-100 group-hover:border-primary-300 transition-colors"
            />
            <div>
              <div class="font-semibold text-slate-800">{testimonial.author}</div>
              <div class="text-sm text-slate-500">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>